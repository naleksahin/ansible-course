%sysops {{hostvars[inventory_hostname]['ansible_default_ipv4']['address']}} = (ALL) ALL
Host_Alias WEBSERVERS = <{% for host in groups['webservers'] -%}{{ host }}{% if not loop.last %},{% endif %}
{%- endfor %}>
{% for host in groups['database'] %}
Host_Alias DBSERVERS = {{ host }}
{% endfor %}
%httpd WEBSERVERS = /bin/su - webuser
%dba DBSERVERS = /bin/su - dbuser 